generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id // Clerk userId
  email       String   @unique
  phoneNumber String?
  fullName    String   @default("user")
  imageUrl    String
  role        UserRole @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings  Booking[]
  addresses Address[]
  cart      Cart?
  reviews   Review[]
}

enum UserRole {
  USER
  ADMIN
}

//services
model Service {
  id       String   @id @default(uuid())
  name     String
  category String
  price    Int
  images   String[]
  rating   Float    @default(0)

  reviews   Review[]
  bookings  Booking[]
  cartItems CartItem[]
}

//Booking Schema (Customer books provider)
model Booking {
  id        String        @id @default(uuid())
  userId    String
  serviceId String
  date      DateTime
  status    BookingStatus @default(PENDING)
  amount    Float
  addressId String
  createdAt DateTime      @default(now())

  user    User    @relation(fields: [userId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])
  address Address @relation(fields: [addressId], references: [id])
}

enum BookingStatus {
  PENDING
  ACCEPTED
  COMPLETED
  CANCELLED
}

model Address {
  id          String  @id @default(uuid())
  userId      String
  phoneNumber String?
  pincode     String
  area        String
  city        String
  state       String

  user     User      @relation(fields: [userId], references: [id])
  bookings Booking[]
}

model Cart {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())

  items CartItem[]
  user  User       @relation(fields: [userId], references: [id]) // relation OK
}

model CartItem {
  id        String    @id @default(uuid())
  cartId    String
  serviceId String
  date      DateTime?
  price     Float
  note      String?
  createdAt DateTime  @default(now())

  cart    Cart    @relation(fields: [cartId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])
}

//Reviews Schema (Customer rates provider)
model Review {
  id        String   @id @default(uuid())
  userId    String
  serviceId String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])
}
